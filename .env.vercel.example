# JWT Secret for custom auth
JWT_SECRET=your-jwt-secret-key

# Encryption key for sensitive data
ENCRYPTION_KEY=your-32-char-encryption-key

# ========================================
# 📁 File Storage & CDN
# ========================================

# Vercel Blob Storage
BLOB_READ_WRITE_TOKEN=vercel_blob_rw_...

# AWS S3 (Optional)
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=creative-ai-storage

# Cloudinary (Optional - for advanced image processing)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ========================================
# 🎯 Feature Flags
# ========================================
NEXT_PUBLIC_SAAS_MODE=true
NEXT_PUBLIC_ENABLE_BILLING=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_WHATSAPP=true
NEXT_PUBLIC_ENABLE_VIDEO_GENERATION=false
NEXT_PUBLIC_MAX_GENERATIONS_PER_DAY=100

# ========================================
# 🔧 API Configuration
# ========================================

# Rate limiting
RATE_LIMIT_MAX=10
RATE_LIMIT_WINDOW_MS=60000

# File upload limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# AI Generation limits
MAX_PROMPT_LENGTH=2000
DEFAULT_IMAGE_SIZE=1024x1024

# ========================================
# 🌍 Internationalization (Optional)
# ========================================
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_SUPPORTED_LOCALES=en,es,pt,fr

# ========================================
# 📈 Performance Monitoring
# ========================================

# New Relic (Optional)
NEW_RELIC_LICENSE_KEY=your-license-key
NEW_RELIC_APP_NAME=Creative AI Studio

# DataDog (Optional)
DD_API_KEY=your-datadog-api-key

# ========================================
# 🚨 Alerting & Notifications
# ========================================

# Slack Webhooks for alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...

# Discord Webhooks
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# ========================================
# 🧪 Testing & Development
# ========================================

# Test API keys (use different keys for testing)
GEMINI_API_KEY_TEST=AIzaSyC...
OPENAI_API_KEY_TEST=sk-proj...

# ========================================
# 📋 DEPLOYMENT INSTRUCTIONS
# ========================================

# 1. Go to your Vercel dashboard
# 2. Select your project
# 3. Navigate to Settings > Environment Variables
# 4. Add each variable above with appropriate values
# 5. Set environment scope for each:
#    - Production: Live site
#    - Preview: Pull request previews
#    - Development: Local development (optional)

# 6. Deploy your application:
#    vercel --prod

# ========================================
# 🔒 SECURITY NOTES
# ========================================

# NEVER commit this file with real values!
# Use strong, unique secrets for production
# Rotate API keys regularly
# Use different keys for different environments
# Enable monitoring for unusual API usage